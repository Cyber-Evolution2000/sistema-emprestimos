# =============================================
# CONFIGURAÇÕES SICOOB PIX
# =============================================

# Client ID fornecido pelo Sicoob
SICOOB_CLIENT_ID=seu_client_id_aqui

# Sua chave PIX (CPF, CNPJ, email, telefone ou chave aleatória)
SICOOB_PIX_KEY=123.456.789-00  # ou seu CNPJ, email, etc

# Caminho para o certificado digital (.p12 ou .pfx)
SICOOB_CERT_PATH=./certificates/certificado.p12

# Senha do certificado (se houver)
SICOOB_CERT_PASSWORD=sua_senha_do_certificado

# =============================================
# CONFIGURAÇÕES DO SISTEMA
# =============================================

# Porta onde o servidor vai rodar
PORT=3000

# URL base da sua aplicação
BASE_URL=http://localhost:3000

# URL do webhook para receber notificações PIX
WEBHOOK_URL=https://seudominio.com/api/webhooks/pix

# Chave secreta para segurança (gerar uma string aleatória)
JWT_SECRET=sua_chave_secreta_super_segura_aqui_32_caracteres

# =============================================
# CONFIGURAÇÕES DE BANCO DE DADOS
# =============================================

# Caminho para o arquivo JSON do banco de dados
DATABASE_PATH=./data/database.json

# =============================================
# CONFIGURAÇÕES DE AMBIENTE
# =============================================

# Tipo de ambiente: development, production, test
NODE_ENV=development

# =============================================
# CONFIGURAÇÕES DE LOG
# =============================================

# Nível de log: error, warn, info, debug
LOG_LEVEL=info